const prompt = require("prompt-sync")()

let positivos = 0;
let negativos = 0;
let zeros = 0;

for (let i = 1; i <= 10; i++) {
    let num = parseInt(prompt("Digite o nÃºmero ${1}:"));

    if (num > 0) {
        positivos ++;
    } else if (num < 0 ) {
        negativos++;
    } else {
        zeros++;
    }
}

console.log("Quantidade de positivos: ${positivos}");
console.log("Quantidade de negativos: ${negativos}");
console.log("Quantidade de zeros: ${zeros}");
